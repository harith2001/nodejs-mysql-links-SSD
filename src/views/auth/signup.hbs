<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card card-body bg-dark text-white p-5" action="/signup" method="POST">
        <h3 class="text-center fw-bold mb-4">SignUp</h3>

        <input type="hidden" name="_csrf" value="{{csrfToken}}" />

        <label for="fullname">Write your fullname:</label>
        <input type="type" name="fullname" placeholder="John Doe" class="form-control mb-3" autofocus />

        <label for="username">Write your Email:</label>
        <input type="email" name="email" placeholder="johndoe123" class="form-control mb-3" />

        <label for="password">Write your password:</label>
        <input type="password" name="password1" placeholder="Password" class="form-control mb-3" />

        {{!-- Confirm your password --}}
        <label for="password">Confirm your password:</label>
        <input type="password" name="password2" placeholder="Password" class="form-control mb-3" />

        <button class="btn btn-success btn-block">
          Register
        </button>
    </div>
    </form>
    
      <!-- Google OAuth Button -->
      <div class="text-center mt-3">
        <a href="/auth/google" class="btn btn-danger btn-block">
          <i class="fab fa-google"></i> Sign up with Google
        </a>
      </div>

    {{! Link }}
    <p class="fs-5 text-center text-white mt-3">Do you already have an account?
      <a href="/signin" class="text-info">Signin</a>
    </p>
  </div>
</div>