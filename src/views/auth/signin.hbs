<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form
        action="/signin"
        method="POST"
        class="card card bg-dark text-white p-4"
      >
        <h3 class="text-center my-3">Sign In</h3>
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <img
          src="/img/logo.png"
          alt="Logo Fazt"
          class="card-img-top mx-auto m-2 rounded-circle w-50"
        />
        <div class="card-body">
          <!-- Email -->
          <label for="username" class="fw-light fs-6 mb-2">
            Write a Email:
          </label>
          <input
            type="text"
            name="email"
            placeholder="youremail@mail.com"
            class="form-control mb-3"
            autofocus
          />

          <!-- Password -->
          <label for="password">Write your Password:</label>
          <div class="form-group">
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="form-control mb-3"
            />
          </div>
          <div class="text-center mt-3"></div>
          <!-- Login Button -->
          <button class="btn btn-primary btn-block">
            Login
          </button>
          
          <!-- Google OAuth Button -->

            <a href="/auth/google" class="btn btn-danger btn-block">
              <i class="fab fa-google"></i> Sign in with Google
            </a>
          </div>
        </div>
      </form>

      <!-- Link to Signup -->
      <p class="fs-5 text-center mt-3 text-light">
        Don't have an Account?
        <a href="/signup" class="text-info">Signup</a>
      </p>
    </div>
  </div>
</div>
